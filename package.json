{
  "name": "spider-theme",
  "version": "1.0.0",
  "description": "Tema WordPress moderno com Tailwind CSS e estrutura organizada",
  "main": "src/js/main.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"node static/js/delay.js && npm run watch:css-final\" \"npm run watch:js\"",
    "watch:css": "sass src/scss/app.scss static/css/app.css --watch",
    "watch:css-final": "postcss static/css/app.css -o static/css/app.min.css --watch",
    "watch:js": "esbuild ./src/js/app.js --bundle --outfile=./static/js/app.min.js --minify --watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/scss/app.scss static/css/app.css --style=expanded && postcss static/css/app.css -o static/css/app.min.css",
    "build:js": "esbuild ./src/js/app.js --bundle --outfile=./static/js/app.min.js --minify",
    "clean": "rm -rf static/css/* static/js/*",
    "lint:css": "stylelint src/scss/**/*.scss",
    "lint:js": "eslint src/js/**/*.js"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "cssnano": "^6.0.1",
    "esbuild": "^0.25.9",
    "eslint": "^8.44.0",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "sass": "^1.63.6",
    "stylelint": "^15.10.1",
    "stylelint-config-standard-scss": "^9.0.0",
    "tailwindcss": "^3.4.17"
  }
}
